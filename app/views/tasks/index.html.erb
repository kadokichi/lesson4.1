<h2>予定一覧</h2>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

<table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>更新日時</th>
     </tr>
   </thead>
 
   <tbody>
     <% @tasks.each do |task| %>
       <tr>
         <td><%= task.id %></td>
         <td><%= task.title %></td>
         <td><%= task.start_day.to_s(:get_day) %></td>
         <td><%= task.end_day.to_s(:get_day) %></td>
         <td><%= task.all_day %></td>
         <td><%= task.updated_at.to_s(:datetime_jp)%></td>
         
         <td>
           <%= link_to "詳細", task %>
         </td>

         <td>
           <%= link_to "編集", [:edit,task] %>
         </td>

         <td>
           <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>

<%= link_to "新規登録", :new_task %>