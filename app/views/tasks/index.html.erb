<div class="containner" >

  <div class="select_button">
    <h2>予定一覧</h2>
    <%= link_to "新規登録", :new_task, class: "btn btn-primary btn-lg" %>
  </div>
  
    <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <table>
      <thead>
        <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
        </tr>
      </thead>
    
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.id %></td>
            <td><%= task.title %></td>
            <td><%= task.start_day.strftime("%Y/%m/%d") %></td>
            <td><%= task.end_day.strftime("%Y/%m/%d") %></td>
            <td>
                <% if task.all_day == true %>
                ◯
                <% else %>

                <% end %>
            </td>
                <td><%= task.updated_at.to_s(:datetime_jp)%>
            </td>
            
            <td>
                <%= link_to "詳細", task %>
            </td>

            <td>
                <%= link_to "編集", [:edit,task] %>
            </td>

            <td>
                <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="total_schedule">
        <p>予定合計 <%=@tasks.count %> 件</p>
        <p>本日の日付 <%=Date.today.strftime("%Y/%m/%d") %> </p>
    </div>
</div>