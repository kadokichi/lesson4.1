<div class="containner" >
    <div class="main_content">
      <table>
        <tr>
          <th>タイトル</th>
          <td><%= @task.title %></td>
        </tr>

        <tr>
          <th>開始日</th>
          <td><%= @task.start_day.strftime("%Y/%m/%d") %></td>
        </tr>

        <tr>
          <th>終了日</th>
          <td><%= @task.end_day.strftime("%Y/%m/%d") %></td>
        </tr>

        <tr>
          <th>終日</th>
          <td>
            <% if @task.all_day == true %>
                ◯
            <% else %>

            <% end %>
          </td>
        </tr>

        <tr>
          <th>スケジュールメモ</th>
          <td><%= @task.description %></td>
        </tr>

      </table>

      <div class="select_button">
         <%= link_to "タスク一覧に戻る", :tasks, class: "btn btn-secondary btn-lg" %>
         <%= link_to "編集", [:edit,@task], class: "btn btn-info btn-lg" %>
      </div>
    </div>
</div>